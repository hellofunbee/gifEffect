<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="140dp"
    android:orientation="vertical"
    tools:context="hello.world.act.PaintsActivity" >

    <LinearLayout
        android:id="@+id/choice_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_color"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:alpha="1"
            android:src="@drawable/door" />

        <ImageView
            android:id="@+id/iv_choice_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:alpha="1"
            android:src="@drawable/choice_pic" />

        <ImageView
            android:id="@+id/iv_pics"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:alpha="1"
            android:src="@drawable/pics1" />

        <ImageView
            android:id="@+id/iv_camera"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:alpha="1"
            android:src="@drawable/camera1" />
    </LinearLayout>

</LinearLayout>